# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Solana Configuration
SOLANA_NETWORK=mainnet-beta
HELIUS_RPC_URL_MAINNET=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
HELIUS_RPC_URL_DEVNET=https://devnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Payment Configuration
PAYMENT_MODE=onchain
# Options: mock | onchain
# mock: Auto-approve payments for development (no blockchain interaction)
# onchain: Direct on-chain verification via Solana blockchain (PRODUCTION MODE)
#          - Validates transactions directly on Solana mainnet
#          - No third-party payment processors
#          - Requires HELIUS_RPC_URL for transaction lookups

# Merchant Wallet (receives payments)
MERCHANT_WALLET_ADDRESS=YOUR_SOLANA_WALLET_ADDRESS

# Redis Configuration (Upstash)
REDIS_URL=redis://default:password@your-endpoint.upstash.io:6379

# PostgreSQL Configuration (Neon)
DATABASE_URL=postgresql://user:password@your-endpoint.neon.tech/dbname?sslmode=require

# Security & Rate Limiting
CORS_ORIGINS=https://example.com,https://app.example.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_BEFORE_PAYMENT=10
RATE_LIMIT_MAX_REQUESTS_AFTER_PAYMENT=100

# Logging
LOG_LEVEL=info
# Options: trace, debug, info, warn, error, fatal

# Cache TTL (seconds)
CACHE_TTL_WALLET_DATA=300
CACHE_TTL_TOKEN_PRICES=120
CACHE_TTL_NFT_FLOOR_PRICES=600
