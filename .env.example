# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Solana Configuration
SOLANA_NETWORK=mainnet-beta
HELIUS_RPC_URL_MAINNET=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
HELIUS_RPC_URL_DEVNET=https://devnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Payment Configuration
PAYMENT_MODE=mock
# Options: mock | test | payai
# mock: Auto-approve payments for development
# test: Use devnet for testing real payment flow
# payai: Production payments with mainnet USDC

PAYAI_FACILITATOR_URL=
PAYAI_PUBLIC_KEY=

# Redis Configuration (Upstash)
REDIS_URL=redis://default:password@your-endpoint.upstash.io:6379

# PostgreSQL Configuration (Neon)
DATABASE_URL=postgresql://user:password@your-endpoint.neon.tech/dbname?sslmode=require

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_BEFORE_PAYMENT=10
RATE_LIMIT_MAX_REQUESTS_AFTER_PAYMENT=100

# Logging
LOG_LEVEL=info
# Options: trace, debug, info, warn, error, fatal

# Cache TTL (seconds)
CACHE_TTL_WALLET_DATA=300
CACHE_TTL_TOKEN_PRICES=120
CACHE_TTL_NFT_FLOOR_PRICES=600
