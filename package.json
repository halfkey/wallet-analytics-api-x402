{
  "name": "wallet-analytics-api",
  "version": "1.0.0",
  "description": "Solana Wallet Analytics API with x402 payment protocol",
  "main": "dist/server.js",
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx scripts/setup-db.ts",
    "generate-nonces": "node --import tsx scripts/generate-nonce-pool.ts",
    "load-test": "node --import tsx scripts/load-test.ts",
    "load-test:realistic": "node --import tsx scripts/load-test-realistic.ts",
    "stress-test": "node --import tsx scripts/stress-test.ts",
    "benchmark": "node --import tsx scripts/benchmark.ts",
    "monitor": "node --import tsx scripts/monitor-performance.ts",
    "monitor:report": "node --import tsx scripts/monitor-performance.ts --report",
    "prepare": "husky install"
  },
  "keywords": [
    "solana",
    "wallet",
    "analytics",
    "x402",
    "payment",
    "api",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.95.8",
    "@upstash/redis": "^1.35.6",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.2",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autocannon": "^8.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
